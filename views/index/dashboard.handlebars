<h1>{{user.firstName}}!</h1>
<p>This is your dashboard.</p>
{{#if stories}}
  <table class="striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Date</th>
        <th>Status</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each stories}}
        <tr>
          <td><a href="/stories/show/{{id}}"> {{title}} </a></td>
          <td> {{formatDate date 'MMMM Do YYYY'}} </td>
          <td><span class="dash-status"> {{status}} </span></td>
          <td>
            <a href="/stories/edit/{{id}}" class="btn left-align light-green darken-1">
              <i class="fas fa-pencil-alt"></i> Edit
            </a>
            <form action="/stories/{{id}}?_method=DELETE" method="POST" id="delete-form">
              <input type="hidden" name="method" value="DELETE">
              <button type="submit" class="btn red">
                <i class="fas fa-trash"></i> Delete
              </button>
            </form>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <p>Dude! You have not created any stories yet.</p>
{{/if}}
<h1>Index Stories</h1>
<div class="row">
  {{#each stories}}
    <div class="col s12 m4">
      <div class="card">
        <div class="card-image">
          <a href="/stories/edit/{{id}}" class="btn-floating halfway-fab red">
            <i class="fas fa-pencil-alt"></i>
          </a>
        </div>
        <div class="card-content center-align">
          <h5> {{title}} </h5>
          <p class="story-text"> {{stripTags (truncate body 150)}} </p>
          <br>
          <div class="chip">
            <img src="{{user.image}}" alt="Contact Person">
            {{user.firstName}} {{user.lastName}}
          </div>
        </div>
        <div class="card-action center-align">
          <a href="/stories/show/{{id}}" class="btn ligth-green">Read more</a>
        </div>
      </div>
    </div>
  {{else}}
    <p>Dude! I didn't found any story.</p>
  {{/each}}
</div>